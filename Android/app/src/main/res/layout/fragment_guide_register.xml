<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:id="@+id/rootLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/headerHeight"
            android:background="@color/headerOrange">
            <Button
                android:id="@+id/closeButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="×"
                android:textSize="24dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="#0000"/>
            <TextView
                android:id="@+id/headerTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Registration"
                android:textSize="@dimen/headerTitleTextSize"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 顔画像 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="顔写真"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <ImageButton
                            android:id="@+id/face1ImageButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="50dp"
                            android:src="@drawable/image_guide"
                            android:scaleType="fitCenter"
                            android:background="#0000"/>
                        <ImageButton
                            android:id="@+id/face2ImageButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="50dp"
                            android:src="@drawable/image_guide"
                            android:scaleType="fitCenter"
                            android:background="#0000"
                            android:layout_marginLeft="20dp"/>
                        <ImageButton
                            android:id="@+id/face3ImageButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="50dp"
                            android:src="@drawable/image_guide"
                            android:scaleType="fitCenter"
                            android:background="#0000"
                            android:layout_marginLeft="20dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- メールアドレス -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="メールアドレス"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:padding="10dp"/>
                </LinearLayout>

                <!-- 名前 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名前"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14dp"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:padding="10dp"/>
                </LinearLayout>

                <!-- 国籍 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="国籍"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/nationalityEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:padding="10dp"/>
                </LinearLayout>

                <!-- 言語 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="言語"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_guide_register_select_button">
                        <TextView
                            android:id="@+id/languageTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textSize="14dp"
                            android:textColor="@color/mainBlack"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼"
                            android:textSize="14dp"
                            android:textColor="@color/mainBlack"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"/>
                        <Button
                            android:id="@+id/languageButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#0000"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- カテゴリー -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="カテゴリー"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_guide_register_select_button">
                        <TextView
                            android:id="@+id/categoryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:textSize="14dp"
                            android:textColor="@color/mainBlack"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼"
                            android:textSize="14dp"
                            android:textColor="@color/mainBlack"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"/>
                        <Button
                            android:id="@+id/categoryButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#0000"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- 得意分野 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="得意分野"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/specialtyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="14dp"
                        android:gravity="top"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:padding="10dp"
                        android:hint="エリア名や得意分野を登録しましょう。 \n例)Tokyo, Izakaya, Sake" />
                </LinearLayout>

                <!-- 自己紹介 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自己紹介"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/messageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="14dp"
                        android:gravity="top"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:padding="10dp"
                        android:hint="こんにちは" />
                </LinearLayout>

                <!-- 案内可能日時 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="案内可能日時"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/timeZoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="14dp"
                        android:gravity="top"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:padding="10dp"
                        android:hint="Sat. 11:00 - 16:00\nSun. 13:00 - 18:00" />
                </LinearLayout>

                <!-- 対応人数 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="対応人数"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_guide_register_select_button">
                        <TextView
                            android:id="@+id/applicableNumberTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="14dp"
                            android:textColor="@color/mainBlack"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="▼"
                            android:textSize="14dp"
                            android:textColor="@color/mainBlack"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"/>
                        <Button
                            android:id="@+id/applicableNumberButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#0000"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- 30分あたりの料金 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30分あたりの料金"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/feeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14dp"
                        android:inputType="number"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:padding="10dp"/>
                </LinearLayout>

                <!-- 備考 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="備考"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/notesEditText"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="14dp"
                        android:gravity="top"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:padding="10dp"
                        android:hint="" />
                </LinearLayout>

                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="設定"
                    android:textSize="16dp"
                    android:textColor="@color/mainBlack"
                    android:textStyle="bold"
                    android:background="@drawable/shape_guest_register_done_button"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>