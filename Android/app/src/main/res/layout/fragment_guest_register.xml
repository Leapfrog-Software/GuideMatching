<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:id="@+id/rootLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/headerHeight"
            android:background="@color/headerOrange">
            <Button
                android:id="@+id/closeButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="×"
                android:textSize="24dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="#0000"/>
            <TextView
                android:id="@+id/headerTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Registration"
                android:textSize="@dimen/headerTitleTextSize"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 顔画像 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Images"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <ImageButton
                            android:id="@+id/face1ImageButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="50dp"
                            android:src="@drawable/image_guide"
                            android:scaleType="fitCenter"
                            android:background="#0000"/>
                        <ImageButton
                            android:id="@+id/face2ImageButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="50dp"
                            android:src="@drawable/image_guide"
                            android:scaleType="fitCenter"
                            android:background="#0000"
                            android:layout_marginLeft="20dp"/>
                        <ImageButton
                            android:id="@+id/face3ImageButton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="50dp"
                            android:src="@drawable/image_guide"
                            android:scaleType="fitCenter"
                            android:background="#0000"
                            android:layout_marginLeft="20dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                </LinearLayout>

                <!-- Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                </LinearLayout>

                <!-- Nationality -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nationality"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <EditText
                        android:id="@+id/nationalityEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_edittext"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                </LinearLayout>

                <!-- Passport -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passport"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"/>
                    <ImageButton
                        android:id="@+id/passportImageButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/image_guide"
                        android:scaleType="fitCenter"
                        android:background="#0000"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/doneButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Done"
                    android:textSize="16dp"
                    android:textColor="@color/mainBlack"
                    android:textStyle="bold"
                    android:background="@drawable/shape_guest_register_done_button"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>