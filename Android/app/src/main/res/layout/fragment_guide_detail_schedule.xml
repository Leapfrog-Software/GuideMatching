<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:id="@+id/rootLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#FC9226">
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/guideScheduleSeparatorGray"/>
                <TextView
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:text="Month"
                    android:textSize="14dp"
                    android:textColor="#fff"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/guideScheduleSeparatorGray"/>
                <LinearLayout
                    android:id="@+id/monthLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/month1TextView"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="2018/1"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:gravity="center"/>
                    <View
                        android:id="@+id/monthSeparatorView"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/guideScheduleSeparatorGray"/>
                    <TextView
                        android:id="@+id/month2TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="2018/1"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#F9F6E9">
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/guideScheduleSeparatorGray"/>
                <TextView
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:text="Day"
                    android:textSize="14dp"
                    android:textColor="#fff"
                    android:background="#F7B92B"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/guideScheduleSeparatorGray"/>
                <LinearLayout
                    android:id="@+id/daysLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/date1TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1\n月"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"
                        android:gravity="center"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/guideScheduleSeparatorGray"/>
                    <TextView
                        android:id="@+id/date2TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1\n月"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"
                        android:gravity="center"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/guideScheduleSeparatorGray"/>
                    <TextView
                        android:id="@+id/date3TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1\n月"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"
                        android:gravity="center"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/guideScheduleSeparatorGray"/>
                    <TextView
                        android:id="@+id/date4TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1\n月"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"
                        android:gravity="center"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/guideScheduleSeparatorGray"/>
                    <TextView
                        android:id="@+id/date5TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1\n月"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"
                        android:gravity="center"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/guideScheduleSeparatorGray"/>
                    <TextView
                        android:id="@+id/date6TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1\n月"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"
                        android:gravity="center"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/guideScheduleSeparatorGray"/>
                    <TextView
                        android:id="@+id/date7TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1\n月"
                        android:textSize="14dp"
                        android:textColor="@color/mainBlack"
                        android:gravity="center"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/guideScheduleSeparatorGray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/guideScheduleSeparatorGray"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:divider="@null"
            android:overScrollMode="never"/>

    </LinearLayout>
</FrameLayout>