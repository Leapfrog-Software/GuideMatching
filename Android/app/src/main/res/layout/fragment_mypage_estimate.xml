<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:id="@+id/rootLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/headerHeight"
            android:background="@color/mainOrange">
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="@dimen/headerHeight"
                android:layout_height="@dimen/headerHeight"
                android:src="@drawable/back_white"
                android:scaleType="fitCenter"
                android:background="#0000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimate"
                android:textSize="@dimen/headerTitleTextSize"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/faceImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18dp"
            android:textColor="@color/mainBlack"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/estimateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/estimate1ImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_full_14_14"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/estimate2ImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_full_14_14"
                android:scaleType="fitCenter"
                android:layout_marginLeft="8dp"/>
            <ImageView
                android:id="@+id/estimate3ImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_full_14_14"
                android:scaleType="fitCenter"
                android:layout_marginLeft="8dp"/>
            <ImageView
                android:id="@+id/estimate4ImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_empty_14_14"
                android:scaleType="fitCenter"
                android:layout_marginLeft="8dp"/>
            <ImageView
                android:id="@+id/estimate5ImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_empty_14_14"
                android:scaleType="fitCenter"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="コメント"
            android:textSize="16dp"
            android:textColor="#909090"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        
        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="8dp"
            android:background="@drawable/shape_mypage_estimate_comment_edittext"
            android:gravity="top"/>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Send"
            android:textSize="18dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/shape_mypage_estimate_send_button"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</FrameLayout>